<div class="row">
    <div class="col-md-4 col-md-offset-4">
        {% block form_header %}
        <form action="index.php?mode=updateItem&amp;id={{ item.id }}" data-ajax-form>
            {% endblock %}
            <div class="form-group">
                <label for="tel">Номер телефона</label>
                <input name="tel" type="tel" class="form-control" id="tel" value="{{ item.tel|telNumber }}" required>
            </div>
            <div class="form-group">
                <label for="fio">Имя</label>
                <input name="fio" type="text" class="form-control" id="fio" value="{{ item.fio }}">
            </div>
            <div class="form-group">
                <label for="city">Город</label>
                <input name="city" type="text" class="form-control" id="city" value="{{ item.city }}">
            </div>
            <footer class="text-center">
                {% block submit_button %}
                    <input type="submit" class="btn btn-primary" value="Сохранить">
                {% endblock %}
            </footer>
        </form>
    </div>
</div>
